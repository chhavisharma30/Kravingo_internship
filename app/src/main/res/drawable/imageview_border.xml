<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <item>
        <shape>
            <solid android:color="#FFEFF1" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Existing Border -->
    <item>
        <shape>
            <corners android:radius="20dp" />
            <stroke
                android:color="@color/cherry"
                android:width="3dp"
                android:dashWidth="10dp"
                android:dashGap="5dp" />
        </shape>
    </item>
</layer-list>




